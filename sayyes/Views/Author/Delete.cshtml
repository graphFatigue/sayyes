@model bestill.Domain.ViewModels.Author.AuthorViewModel

@{
    ViewBag.Title = "Додавання";
    Layout = "_Layout";
}


@{
    var textTitle = Model?.Id == 0 ? "Редагування даних" : "Додавання даних";
}





<div style="padding: 10px;"></div>
<div class="col-md-12">
    <div class="card-body">
        <div class="card card-outline-secondary" style="background-color: white">
            <div class="card-header">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography"></label>
                        <textarea asp-for="Biography" class="form-control"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <textarea asp-for="Avatar" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-primary btn-lg float-right" type="submit">Відправити</button>
                </form>
            </div>
        </div>
    </div>
</div>



