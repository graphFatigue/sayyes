@using sayyes.Domain.ViewModels.Author
@model AuthorViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src=@Model.Avatar
                 class="img-fluid rounded-start rounded" alt="@Model?.Name">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Опис: </b>@Model?.Biography</p>
            </div>
        </div>
        <div class="card-body">
            <a asp-controller="Book" asp-action="GetBooks" asp-route-authorId="@Model.Id" class="card-link">Перейти до альбомів</a>
            @* <a asp-controller="Basket" asp-action="Add" asp-route-id="@id" class="card-link">Добавить</a> *@
            <hr />
            <a asp-controller="Artist" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <img src="https://cdn-icons-png.flaticon.com/512/17/17047.png" width="30"
                     class="img-fluid rounded-start rounded">
            </a>
            <a asp-controller="Author" asp-action="Save" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
            <a asp-controller="Author" asp-action="GetArtists" class="btn btn-success">Повернутися</a>
        </div>
    </div>
</div>