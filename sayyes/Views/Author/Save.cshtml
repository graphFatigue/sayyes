@using System;
@using System.Collections;
@using System.Globalization;
@using sayyes.Domain.Entity;
@model sayyes.Domain.ViewModels.Author.AuthorViewModel

@{
    ViewBag.Title = "Додавання";
    Layout = "_Layout";
}


@{
    var textTitle = Model?.Id == 0 ? "Редагування даних" : "Додавання даних";
}

@{
    Countries countries = new Countries();
    countries.SetList();
    var countryList = countries.cultureList;

}



<div style="padding: 10px;"></div>
<div class="col-md-12">
    <div class="card-body">
        <div class="card card-outline-secondary" style="background-color: white">
            <div class="card-header">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="form-group">
                        <label asp-for="Name" style="color:black">Ім'я виконавця</label>
                        <input asp-for="Name" class="form-control" type="text" id="validationServer01" placeholder="Введіть ім'я виконавця..." required>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" style="color:black">Surname</label>
                        <input asp-for="Surname" class="form-control" type="text" id="validationServer01" placeholder="Введіть ім'я виконавця..." required>
                        <span asp-validation-for="Surname"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Patronymic" style="color:black">Patronymic</label>
                        <input asp-for="Patronymic" class="form-control" type="text" id="validationServer01" placeholder="Введіть ім'я виконавця..." required>
                        <span asp-validation-for="Patronymic"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" style="color:black">Опис</label>
                        <textarea asp-for="Biography" class="form-control" placeholder="Додати опис..."></textarea>
                    </div>
                    <p>
                        <label for="date">Дата рождения: </label>
                        <input class="form-control" asp-for="DateOfBirth" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                    </p>
                    <div class="col-md-3">
                        <label for="validationDefault04" style="color:black" class="form-label">Країна</label>
                        <select asp-for="Nationality" style="align-content" class="form-select" id="validationDefault04" required>
                            <option selected disabled value="">Оберіть...</option>
                            @foreach (var country in countryList)
                            {
                                <option>@country</option>
                            }

                        </select>
                    </div>


                    <div class="form-group">
                        <label asp-for="Avatar" style="color:black">Зображення</label>
                        <textarea asp-for="Avatar" class="form-control" placeholder="Вставьте посилання на зображення..."></textarea>
                    </div>


                    <a asp-controller="Author" asp-action="GetAuthors" class="btn btn-success">Повернутися</a>
                    <button class="btn btn-primary btn-lg float-right" type="submit">Відправити</button>
                </form>
            </div>
        </div>
    </div>
</div>



